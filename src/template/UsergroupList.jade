include ./header.jade
h1 Benutzergruppen (#{data.usergroups.length})

div.button
	a(href="/UsergroupAdd?sessionId=#{data.sessionId}") Gruppe erstellen

if status == 'success'
	p.success #{lang('success.usergroup.'+data.success)}

table
	thead
		tr
			th Name
			th(colspan="3") Aktionen
	tbody
		each group in data.usergroups
			tr
				td #{lang(group.name)}
				td
					a(href="/LanguageVariableTranslate?sessionId=#{data.sessionId}&name=#{group.name}") Übersetzen
				td
					a(href="/UsergroupEdit?sessionId=#{data.sessionId}&usergroupId=#{group._id}") Bearbeiten
				td
					a(href="/UsergroupDelete?sessionId=#{data.sessionId}&usergroupId=#{group._id}") Löschen